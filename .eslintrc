{
  "parser": "@typescript-eslint/parser",

  "root": true,

  "extends": [
    "@asd14/eslint-config/targets/react-ts",
  ],

  "ignorePatterns": ["dist/*.js", "*.d.ts"],

  "globals": {
    "process": true,
    "require": true,
    "module": true
  },

  // App specific rules
  "rules": {
  },

  "settings": {
    // Recommended if you use eslint_d
    "import/cache": {
      "lifetime": 5,
    },

    // Can add a path segment here that will act like a source root, for
    // in-project aliasing (i.e. `import MyStore from 'stores/my-store'`)
    "import/resolver": "webpack"
  }
}
