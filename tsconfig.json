{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmit": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
